@model Proyecto_LibreriaRincondelQuijote.Models.HistorialCompra

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>

</head>
<body class="bg-light">
    <div class="container">
        <h2 class="text-primary">Editar Historial de Compra</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, new { @class = "form-label" })
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CodigoProducto, "Codigo Producto", new { @class = "form-label" })
                @Html.DropDownList("CodigoProducto", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodigoProducto, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Precio, new { @class = "form-label" })
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FechaCompra, new { @class = "form-label" })
                @Html.EditorFor(model => model.FechaCompra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FechaCompra, "", new { @class = "text-danger" })
            </div>

   

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
        </div>
    </div>
</body>
</html>
